=simple_form_for @pin do |f|
	-if @pin.errors.any?
		.pin_errors
			%h4
				=pluralize(@pin.errors.count, "error")
				prevented to save pin
			%ul
				-@pin.errors.full_messages.each do |error|
					%li= error
	.form-group
		=f.input :image, as: :file, input_html: {class: "form-control"}
	.form-group
		=f.input :title, input_html: {class: "form-control"}
	.form-group
		=f.input :content, input_html: {class: "form-control"}
	=f.button :submit, class: "btn btn-primary"